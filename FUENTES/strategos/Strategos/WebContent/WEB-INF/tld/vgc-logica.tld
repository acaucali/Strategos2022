			<required>false</required>
			<rtexprvalue>true</rtexprvalue>
		</attribute>
		<attribute>
			<name>scope</name>
			<required>false</required>
			<rtexprvalue>true</rtexprvalue>
		</attribute>

		<attribute>
			<name>value</name>
			<required>true</required>
			<rtexprvalue>yes</rtexprvalue>
		</attribute>

	</tag>

	<tag>
		<name>tamanoColeccionIgual</name>
		<tag-class>com.visiongc.framework.web.struts.taglib.logica.TamanoColeccionIgualTag</tag-class>
