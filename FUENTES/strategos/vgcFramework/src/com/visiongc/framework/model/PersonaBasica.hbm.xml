<?xml version='1.0' encoding='utf-8'?>

<!DOCTYPE hibernate-mapping SYSTEM "../../../../hibernate-mapping-3.0.dtd" >

<!-- Modificado por: Kerwin Arias (28/08/2012) -->

<hibernate-mapping>

	<class name="com.visiongc.framework.model.PersonaBasica" table="persona">

		<id name="personaId" type="java.lang.Long" column="persona_id"></id>

		<property name="cedula" type="java.lang.String" column="cedula" unique="true" not-null="true" length="50" />

		<property name="nombre" type="java.lang.String" column="nombre" not-null="true" length="100" />

		<property name="fechaNacimiento" type="java.sql.Timestamp" column="fecha_nac" />

		<property name="sexo" type="java.lang.String" column="sexo" length="15" />

		<property name="direccion" type="java.lang.String" column="direccion" length="250" />

		<property name="telefono" type="java.lang.String" column="telefono" length="50" />

		<property name="email" type="java.lang.String" column="email" length="100" />

		<property name="password" type="java.lang.String" column="pwd" length="100" />

		<property name="usuarioId" type="java.lang.Long" column="usuario_id" />

		<!-- Associations -->

	</class>

</hibernate-mapping>
